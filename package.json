{
  "name": "vitepress-auto-sidebar-plugin",
  "type": "module",
  "version": "0.0.1-beta.2",
  "packageManager": "pnpm@8.15.3",
  "description": "Automatically generates the sidebar configuration based on the file structure",
  "author": {
    "name": "Ares Chang",
    "email": "areschang114@qq.com",
    "url": "https://github.com/Ares-Chang"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/Ares-Chang",
  "homepage": "https://github.com/Ares-Chang/vitepress-auto-sidebar-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ares-Chang/vitepress-auto-sidebar-plugin.git"
  },
  "bugs": "https://github.com/Ares-Chang/vitepress-auto-sidebar-plugin/issues",
  "keywords": [
    "vitepress-auto-sidebar",
    "vitepress",
    "sidebar",
    "auto sidebar",
    "vitepress sidebar",
    "vitepress-plugin",
    "vitepress-plugin-sidebar"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "play": "npm -C playground run dev",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "vite": "^5.1.4",
    "vitepress": "1.0.0-rc.45"
  },
  "dependencies": {
    "consola": "^3.2.3",
    "fast-glob": "^3.3.2",
    "pathe": "^1.1.2",
    "throttle-debounce": "^5.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.7",
    "@types/node": "^20.11.19",
    "@types/throttle-debounce": "^5.0.2",
    "bumpp": "^9.3.0",
    "eslint": "^8.56.0",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.3",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^5.1.4",
    "vitepress": "1.0.0-rc.45",
    "vitest": "^1.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
